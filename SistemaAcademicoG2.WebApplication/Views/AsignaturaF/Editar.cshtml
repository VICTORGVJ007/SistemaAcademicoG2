@model SistemaAcademicoG2.Domain.Entities.Asignatura

@{
    ViewData["Title"] = "Editar Asignatura";
}

<script src="https://cdn.tailwindcss.com"></script>
<script src="https://unpkg.com/feather-icons"></script>

<div class="min-h-screen flex items-center justify-center bg-gray-100 py-10">
    <div class="bg-white p-8 rounded-2xl shadow-xl w-full max-w-lg">

        <div class="flex items-center justify-between mb-6">
            <h2 class="text-3xl font-bold text-gray-800 flex items-center gap-2">
                <i data-feather="edit-3"></i> Editar Asignatura
            </h2>
            <a href="/AsignaturaMvc"
               class="text-gray-600 hover:text-gray-900 transition flex items-center gap-1">
                <i data-feather="arrow-left"></i> Volver
            </a>
        </div>

        <form method="post" asp-action="Editar" asp-route-id="@Model.Id" class="space-y-6">

            <!-- Campo: Nombre -->
            <div>
                <label for="Nombre" class="block text-sm font-medium text-gray-700 mb-2">
                    Nombre de la Asignatura
                </label>
                <input type="text" id="Nombre" name="Nombre" value="@Model.Nombre" required
                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none transition" />
            </div>

            <!-- Estado -->
            <div class="flex items-center gap-3">
                <input type="checkbox" id="Activo" name="Activo" value="true"
                @(Model.Estado ? "checked" : "")
                       class="h-5 w-5 text-blue-600 border-gray-300 rounded focus:ring-blue-500" />
                <label for="Activo" class="text-gray-700 font-medium text-sm">
                    Activa
                </label>
            </div>

            <!-- Botones -->
            <div class="flex justify-end gap-3 pt-4">
                <a href="/AsignaturaMvc"
                   class="bg-gray-200 hover:bg-gray-300 text-gray-700 px-5 py-2 rounded-lg font-semibold transition flex items-center gap-1">
                    <i data-feather="x-circle"></i> Cancelar
                </a>

                <button type="submit"
                        class="bg-blue-600 hover:bg-blue-700 text-white px-5 py-2 rounded-lg font-semibold transition flex items-center gap-1">
                    <i data-feather="save"></i> Guardar Cambios
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    feather.replace();
</script>